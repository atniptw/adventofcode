{
  "name": "advent-of-code",
  "version": "1.0.0",
  "description": "Advent of Code solutions across multiple years",
  "private": true,
  "workspaces": [
    "packages/*",
    "years/*"
  ],
  "scripts": {
    "solve": "node scripts/runner.js",
    "setup": "node scripts/setup-year.js",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/jest": "^29.5.14",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "engines": {
    "node": ">=18"
  }
}