{
  "name": "advent-of-code",
  "version": "1.0.0",
  "description": "Advent of Code solutions across multiple years",
  "type": "module",
  "private": true,
  "scripts": {
    "solve": "node scripts/runner.js",
    "start-day": "node scripts/start-day.js",
    "fetch-input": "node scripts/fetch-input.js",
    "aoc-status": "node scripts/aoc-status.js",
    "list-days": "node scripts/list-days.js",
    "check-day": "node scripts/check-day.js",
    "help": "node scripts/help.js",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf build",
    "dev": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run typecheck && npm run lint && npm run test"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^22.10.7",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  }
}
